<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pom-scijava</artifactId>
    <groupId>org.scijava</groupId>
    <version>14.0.0</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.duke.biology.baughlab</groupId>
  <artifactId>WormSizer_</artifactId>
  <name>WormSizer</name>
  <version>1.2.5</version>
  <description>An application for measuring width, length, and volume of nematodes from brightfield microscopy images</description>
  <url>https://github.com/bradtmoore/wormsizer</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/bradtmoore/wormsizer/issues</url>
  </issueManagement>
  <ciManagement>
    <system>None</system>
  </ciManagement>
  <inceptionYear>2012</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>ImageJ Forum</name>
      <archive>http://forum.imagej.net/</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>bradleymoore</id>
      <name>Brad T. Moore</name>
      <email>brad.t.moore@duke.edu</email>
      <url>http://www.biology.duke.edu/~baughlab</url>
      <organization>Duke University</organization>
      <organizationUrl>http://www.duke.edu</organizationUrl>
      <roles>
        <role>founder</role>
        <role>developer</role>
        <role>maintainer</role>
      </roles>
      <timezone>-4</timezone>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Jan Eglinger</name>
      <email>jan.eglinger@fmi.ch</email>
      <organization>Friedrich Miescher Institute for Biomedical Research, Basel, Switzerland</organization>
      <properties>
        <id>imagejan</id>
      </properties>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>Simplified BSD License</name>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/bradtmoore/wormsizer</connection>
    <developerConnection>scm:git:git@github.com:bradtmoore/wormsizer</developerConnection>
    <url>https://github.com/bradtmoore/wormsizer</url>
  </scm>
  <organization>
    <name>Duke University</name>
    <url>http://www.duke.edu</url>
  </organization>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
      </resource>
      <resource>
        <directory>${project.build.sourceDirectory}</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>sc.fiji.analyzeSkeleton</pattern>
                  <shadedPattern>sc.fiji.analyzeSkeleton.shaded</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>Skeletonize3D_</pattern>
                  <shadedPattern>Skeletonize3D_.shaded</shadedPattern>
                </relocation>
              </relocations>
              <artifactSet>
                <includes>
                  <include>sc.fiji:AnalyzeSkeleton_</include>
                  <include>sc.fiji:Skeletonize3D_</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.jvnet.jaxb2.maven2</groupId>
        <artifactId>maven-jaxb2-plugin</artifactId>
        <version>0.13.1</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <generatePackage>edu.duke.biology.baughlab.wormsize.xml</generatePackage>
          <includeSchemas>
            <includeSchema>**/*.xsd</includeSchema>
            <includeSchema>**/*.dtd</includeSchema>
          </includeSchemas>
          <excludeSchemas>
            <excludeSchema>test*.xsd</excludeSchema>
          </excludeSchemas>
          <includeBindings>
            <includeBinding>*.xjb</includeBinding>
          </includeBindings>
          <strict>true</strict>
          <verbose>true</verbose>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>imagej</id>
      <url>http://maven.imagej.net/content/groups/public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>net.imagej</groupId>
      <artifactId>ij</artifactId>
      <version>1.51h</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <artifactId>tools</artifactId>
          <groupId>com.sun</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>au.com.bytecode</groupId>
      <artifactId>opencsv</artifactId>
      <version>2.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-utils</artifactId>
      <version>3.0.22</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.swinglabs</groupId>
      <artifactId>swing-layout</artifactId>
      <version>1.0.3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>sc.fiji</groupId>
      <artifactId>Auto_Threshold</artifactId>
      <version>1.16.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.xml.bind</groupId>
      <artifactId>jaxb-api</artifactId>
      <version>2.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <license.licenseName>bsd_2</license.licenseName>
    <license.copyrightOwners>Duke University</license.copyrightOwners>
  </properties>
</project>

